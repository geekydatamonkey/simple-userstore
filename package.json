{
  "name": "simple-userstore",
  "version": "0.1.0",
  "description": "A simple way to store user info. Nothing Fancy.",
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src/index.js -o dist/index.js",
    "start": "nodemon ./src/cli.js --exec babel-node",
    "test": "eslint src/**/*.js test/**/*.js && ava",
    "test:watch": "ava --watch --verbose"
  },
  "author": "James Johnson <johnsojr@gmail.com> (http://james.mn/)",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "bcryptjs-then": "^1.0.1",
    "nedb": "^1.8.0",
    "nedb-promise": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-2": "^6.13.0",
    "eslint": "^3.3.0",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-plugin-import": "^1.13.0",
    "nodemon": "^1.10.0",
    "tempfile": "^1.1.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true
    },
    "extends": "airbnb-base",
    "rules": {
      "arrow-body-style": [
        "error",
        "always"
      ],
      "no-console": "off"
    }
  }
}
